<h1>Step Threes</h1>

<table>
  <thead>
    <tr>
      <th>Numerofactura</th>
      <th>Vehiculo</th>
      <th>Nombrevendedor</th>
      <th>Cliente</th>
      <th>Notascargo</th>
      <th>Notascredito</th>
      <th>Pedido</th>
      <th>User</th>
      <th>Completado</th>
      <th colspan="3"></th>
