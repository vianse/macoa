        <td><%= link_to 'Show', step_three %></td>
        <td><%= link_to 'Edit', edit_step_three_path(step_three) %></td>
        <td><%= link_to 'Destroy', step_three, method: :delete, data: { confirm: 'Are you sure?' } %></td>
