  </thead>

  <tbody>
    <% @step_threes.each do |step_three| %>
      <tr>
        <td><%= step_three.numeroFactura %></td>
        <td><%= step_three.vehiculo %></td>
        <td><%= step_three.nombreVendedor %></td>
        <td><%= step_three.cliente %></td>
        <td><%= step_three.notasCargo %></td>
        <td><%= step_three.notasCredito %></td>
