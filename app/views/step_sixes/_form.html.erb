                      <%= f.hidden_field :pedido, :value => params[:pedido] %>
                    </div>

                    <div class="field">

                      <%= f.hidden_field :user_id %>
                    </div>

                    <div class="field">

                      <%= f.hidden_field :completado, :value => 1 %>
                    </div>

                    <div class="actions">
                      <%= f.submit "Guardar",:class=>"btn btn-success btn-anim" %>
                    </div>
                  <% end %>


